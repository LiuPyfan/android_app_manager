<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              >
  <!-- Mode button (robot on/off) with "waiting" spinner. -->
  <FrameLayout android:layout_width="50dp" android:layout_height="50dp">
    <ImageButton android:layout_width="50dp" android:layout_height="50dp" android:scaleType="fitCenter" android:padding="0dp"
                 android:cropToPadding="false"
                 android:gravity="center"
                 android:src="@drawable/gear"
                 android:id="@+id/mode_button"/>
    <ProgressBar android:layout_width="50dp"
                 android:layout_height="50dp"
                 android:padding="10dp"
                 android:id="@+id/mode_waiting_spinner"/>
  </FrameLayout>

  <!-- Robot battery level indicator. -->
  <LinearLayout android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="10sp"
              android:text="Robot"/>
    <FrameLayout android:layout_width="40dp" android:layout_height="25dp">
      <ProgressBar android:layout_width="40dp" android:layout_height="25dp"
                   style="?android:attr/progressBarStyleHorizontal"
                   android:id="@+id/robot_battery_bar"/>
      <ImageView android:layout_width="25dp" android:layout_height="15dp"
                 android:src="@drawable/power_plug"
                 android:layout_gravity="center"
                 android:visibility="invisible"
                 android:id="@+id/robot_charging_indicator"/>
    </FrameLayout>
  </LinearLayout>

  <!-- Laptop battery level indicator. -->
  <LinearLayout android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="10sp"
              android:text="Laptop"/>
    <FrameLayout android:layout_width="40dp" android:layout_height="25dp">
      <ProgressBar android:layout_width="40dp" android:layout_height="25dp"
                   style="?android:attr/progressBarStyleHorizontal"
                   android:id="@+id/laptop_battery_bar"/>
      <ImageView android:layout_width="25dp" android:layout_height="15dp"
                 android:src="@drawable/power_plug"
                 android:layout_gravity="center"
                 android:visibility="invisible"
                 android:id="@+id/laptop_charging_indicator"/>
    </FrameLayout>
  </LinearLayout>
</LinearLayout>
